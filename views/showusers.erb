

  

<table class="table table-striped" >
	<thead>
		<tr>
			<th>№:</th>
			<th>Имя:</th>
			<th>Телефон:</th>
			<th>Дата записи:</th>
			<th>Имя Мастера:</th>
			<th>Цвет:</th>
		</tr>	

	</thead>

	<tbody>
	  <% @results.each do |row| %>
	  	<tr>
	  		<td><%= row['id'] %></td>
	  		<td><%= row['name'] %></td>
	  		<td><%= row['phone'] %></td>
	  		<td><%= row['date_stamp'] %></td>
	  		<td><%= row['name_master'] %></td>
	  		<td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
	  	</tr>	

	  <%  end %>
	</tbody>  
</table>
  		
 